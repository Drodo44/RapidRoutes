{
  "version": 2,
  "framework": "nextjs",
  "buildCommand": "next build",
  "outputDirectory": ".next",
  "headers": [
    {
      "source": "/(.*)",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "no-cache, no-store, must-revalidate"
        }
      ]
    }
  ],
  "crons": [
    {
      "path": "/api/fetchDatBlog",
      "schedule": "0 10 * * 1"
    }
  ],
  "routes": [
    {
      "src": "/api/kma-lookup",
      "dest": "/api/kma-lookup"
    },
    {
      "src": "/api/test",
      "dest": "/api/test"
    }
  ]
}